<Window x:Class="TryMetilda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:TryMetilda"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <xctk:BusyIndicator x:Name="BusyIndicator">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="GoButton" Click="GoButton_Click">Go</Button>
            <Button x:Name="ProgressButton" Visibility="Collapsed">In Progress</Button>
            <Button x:Name="BusyButton" Grid.Row="1" Click="BusyButton_Click">Busy</Button>
        </Grid>
    </xctk:BusyIndicator>
</Window>
